{
  "name": "sunaryohadi/slim3-skeleton",
  "description": "Simple Slim Framework 3 skeleton with Twig, Monolog, ezSQL (mysqli). Also has sample of simple CRUD.",
  "version": "1.1", 
  "license": "BSD-3-Clause",
  "type": "project",
  "keywords": ["slim-framework", "skeleton", "ezSQL", "crud"],
  "authors": [
    {
      "name": "Sunaryo Hadi",
      "homepage": "http://www.sunaryohadi.info",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
        "App\\": "private/src"
    }
  },
  "config": {
    "vendor-dir": "private/vendor"
  }, 
  "require": {
    "php" : ">=5.6",
    "ext-mbstring": "*",
    "slim/slim": "^3.12.3",
    "slim/twig-view": "^2.5.1",
    "twig/extensions": "^1.5.4",
    "slim/flash": "^0.4.0",
    "slim/csrf": "^1.0",
    "monolog/monolog": "^1.25.4",
    "ezsql/ezsql": "^4.0"
  },
	"scripts": {
		"start": "php -S 0.0.0.0:8080 -t web"
	}
}
